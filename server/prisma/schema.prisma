generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id String @id @default(cuid())

  label String
  depth Int

  parentId String?
  parent   Menu?   @relation("MenuChilds", fields: [parentId], references: [id])
  childs   Menu[]  @relation("MenuChilds")
}
